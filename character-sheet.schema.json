{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Thalui Vampire Character Sheet",
  "type": "object",
  "required": [
    "name",
    "heritage",
    "background",
    "languages",
    "magic",
    "statblock",
    "age",
    "years ago",
    "roles",
    "Sex"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "object",
      "required": ["taken", "given", "oath", "family", "titles"],
      "additionalProperties": false,
      "properties": {
        "taken": {
          "type": "string",
          "description": "The name taken after the Thalui oath"
        },
        "given": {
          "type": "string",
          "description": "Original birth name, not to be used officially"
        },
        "oath": {
          "type": "string",
          "enum": ["Thalui"],
          "description": "The oath binding - must be Thalui"
        },
        "family": {
          "type": "string",
          "description": "Original family name, not to be used officially"
        },
        "titles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "All formal titles held"
        }
      }
    },
    "heritage": {
      "type": "object",
      "required": ["race", "bloodline"],
      "additionalProperties": false,
      "properties": {
        "race": {
          "type": "string",
          "enum": ["Asur", "Asrai", "Druchii"],
          "description": "Elven sub-race"
        },
        "bloodline": {
          "type": "string",
          "enum": ["Blood Dragon", "Lahmian", "von Carstein", "Necrarch", "Strigoi", "Vampire Coast"],
          "description": "Vampiric bloodline"
        }
      }
    },
    "background": {
      "type": "object",
      "required": [
        "former occupation",
        "while alive",
        "description",
        "personality",
        "place of birth",
        "favorite weapon",
        "combat style",
        "siblings"
      ],
      "additionalProperties": false,
      "properties": {
        "former occupation": {
          "type": "string",
          "description": "Profession before vampirism"
        },
        "while alive": {
          "type": "object",
          "required": ["haircolor", "eyecolor"],
          "additionalProperties": false,
          "properties": {
            "haircolor": {
              "type": "string",
              "description": "Hair color when alive"
            },
            "eyecolor": {
              "type": "string",
              "description": "Eye color when alive"
            }
          }
        },
        "description": {
          "type": "string",
          "description": "Physical and behavioral description"
        },
        "personality": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Key personality traits"
        },
        "place of birth": {
          "type": "string",
          "description": "Birth location"
        },
        "favorite weapon": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Preferred weapons"
        },
        "combat style": {
          "type": "string",
          "description": "Combat approach and style"
        },
        "parents": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "A parents's description at the name of the parent"
          }
        },
        "siblings": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "A sibling's description at the name of the sibling"
          }
        },
        "connections": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "A connection's description at the name of the connection"
          }
        }
      }
    },
    "languages": {
      "type": "object",
      "required": ["Eltharin", "Human"],
      "additionalProperties": true,
      "properties": {
        "Eltharin": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "Old": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Asur": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Asrai": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Druchii": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            }
          }
        },
        "Human": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "Classical": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Nehekharan": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Reikspiel": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            },
            "Bretonnian": {
              "type": "string",
              "enum": ["none", "basic", "advanced", "native"]
            }
          }
        },
        "High Magic ritual tongues": {
          "type": "string",
          "enum": ["none", "basic", "advanced", "native"]
        }
      }
    },
    "magic": {
      "type": "object",
      "required": ["capacity", "wind strength increase", "lores"],
      "additionalProperties": false,
      "properties": {
        "capacity": {
          "type": "integer",
          "minimum": 0,
          "description": "Magical capacity percentage compared to a fully trained human battlemage"
        },
        "wind strength increase": {
          "type": "integer",
          "minimum": 0,
          "description": "Vampiric boost to wind strength"
        },
        "lores": {
          "type": "object",
          "required": [
            "Death", "Shadow", "Vampire", "Depth", "Life",
            "Athel Loren", "High Magic", "Dark Magic"
          ],
          "additionalProperties": false,
          "properties": {
            "Death": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Shadow": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Vampire": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Depth": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Life": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Athel Loren": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "High Magic": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            },
            "Dark Magic": {
              "type": "string",
              "enum": ["none", "novice", "apprentice", "journeyman", "expert", "master"]
            }
          }
        }
      }
    },
    "statblock": {
      "type": "object",
      "required": [
        "strength",
        "movement speed",
        "reaction speed",
        "weapon skill",
        "ballistic skill",
        "toughness",
        "fatigue"
      ],
      "additionalProperties": false,
      "properties": {
        "strength": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "movement speed": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "reaction speed": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "weapon skill": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "ballistic skill": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "toughness": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        },
        "fatigue": {
          "type": "integer",
          "description": "percentage compared to an average elven warrior",
          "minimum": 1
        }
      }
    },
    "age": {
      "type": "object",
      "required": ["physical", "human-equivalent"],
      "additionalProperties": false,
      "properties": {
        "physical": {
          "type": "integer",
          "minimum": 0,
          "description": "Actual age in years"
        },
        "human-equivalent": {
          "type": "integer",
          "minimum": 0,
          "description": "Equivalent human age for development"
        }
      }
    },
    "years ago": {
      "type": "object",
      "required": ["born", "turned"],
      "additionalProperties": false,
      "properties": {
        "born": {
          "type": "integer",
          "minimum": 0,
          "description": "Years since birth"
        },
        "turned": {
          "type": "integer",
          "minimum": 0,
          "description": "Years since vampiric transformation"
        }
      }
    },
    "roles": {
      "type": "object",
      "required": ["combat", "diplomacy", "civil"],
      "additionalProperties": false,
      "properties": {
        "combat": {
          "type": "string",
          "description": "Combat role and capabilities"
        },
        "diplomacy": {
          "type": "string",
          "description": "Diplomatic role and approach"
        },
        "civil": {
          "type": "string",
          "description": "Civil/administrative role"
        }
      }
    },
    "Sex": {
      "type": "string",
      "enum": ["male", "female"],
      "description": "Character's sex"
    }
  }
}